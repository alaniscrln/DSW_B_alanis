<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>Aplicación de Subastas</display-name>
    <description>
        Aplicación de subastas con Servlets.
    </description>
    <servlet>
        <servlet-name>sregistro</servlet-name>
        <servlet-class>es.iespuertodelacruz.alanissimoes.ServletRegistro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>slogin</servlet-name>
        <servlet-class>es.iespuertodelacruz.alanissimoes.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>scomprar</servlet-name>
        <servlet-class>es.iespuertodelacruz.alanissimoes.ServletComprar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>svender</servlet-name>
        <servlet-class>es.iespuertodelacruz.alanissimoes.ServletVender</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>smain</servlet-name>
        <servlet-class>es.iespuertodelacruz.alanissimoes.ServletMain</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>sregistro</servlet-name>
        <url-pattern>/registro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>slogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>scomprar</servlet-name>
        <url-pattern>/comprar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>svender</servlet-name>
        <url-pattern>/vender</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>smain</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
</web-app>
